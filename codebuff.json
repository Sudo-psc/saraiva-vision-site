{
  "description": "Template configuration for this project. See https://www.codebuff.com/config for all options.",
  "startupProcesses": [
    {
      "name": "dev",
      "command": "npm run dev",
      "enabled": true,
      "stdoutFile": "logs/dev.log"
    }
  ],
  "fileChangeHooks": [
    {
      "name": "typecheck",
      "command": "npm run build",
      "filePattern": "**/*.{js,jsx,ts,tsx}",
      "enabled": true
    },
    {
      "name": "test",
      "command": "npm run test:run",
      "filePattern": "**/*.{test,spec}.{js,jsx,ts,tsx}",
      "enabled": false
    }
  ]
}