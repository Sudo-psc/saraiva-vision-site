# Saraiva Vision - Environment Variables Template
# Copy this file to .env.local and fill in your values
# DO NOT commit sensitive values to version control

# WordPress Integration
# WordPress GraphQL API endpoint
WORDPRESS_GRAPHQL_ENDPOINT=https://cms.saraivavision.com.br/graphql

# WordPress domain for content fetching
WORDPRESS_DOMAIN=https://cms.saraivavision.com.br

# Secret token for WordPress revalidation webhooks
# WP_REVALIDATE_SECRET=your_wp_revalidate_secret_here

# Secret token for WordPress webhook validation
# WP_WEBHOOK_SECRET=your_wp_webhook_secret_here

# Database Configuration
# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key
# SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (full access)
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Email & SMS Services
# Resend API key for email delivery
# RESEND_API_KEY=your_resend_api_key_here

# Doctor email address for notifications
DOCTOR_EMAIL=philipe_cruz@outlook.com

# From email address for contact form
CONTACT_EMAIL_FROM=contato@saraivavision.com.br

# Zenvia API token for SMS delivery
# ZENVIA_API_TOKEN=your_zenvia_api_token_here

# Zenvia sender phone number
ZENVIA_FROM_NUMBER=+5511999999999

# External Services
# Spotify podcast RSS feed URL
SPOTIFY_RSS_URL=https://anchor.fm/s/your-podcast/podcast/rss

# OpenAI API key for chatbot functionality
# OPENAI_API_KEY=your_openai_api_key_here

# Analytics
# PostHog public key for analytics
POSTHOG_KEY=phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# PostHog API key for server-side analytics
# POSTHOG_API_KEY=your_posthog_api_key_here

# PostHog project ID
POSTHOG_PROJECT_ID=12345

# System Configuration
# Node.js environment
NODE_ENV=production

# System timezone
TIMEZONE=America/Sao_Paulo

# Public site URL
NEXT_PUBLIC_SITE_URL=https://saraivavision.com.br

# Rate Limiting
# Rate limit window in minutes
RATE_LIMIT_WINDOW=15

# Maximum requests per window
RATE_LIMIT_MAX=10

# Security (Optional)
# reCAPTCHA secret key (if using reCAPTCHA)
# RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

