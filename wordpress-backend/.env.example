# WordPress Configuration
WORDPRESS_URL=https://api.saraivavision.com.br
WORDPRESS_TITLE="Saraiva Vision - Clínica Oftalmológica"
WORDPRESS_ADMIN_EMAIL=admin@saraivavision.com.br
WORDPRESS_DEBUG=0

# Database Configuration
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here
MYSQL_PASSWORD=your_mysql_wordpress_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379

# SMTP Configuration (for WP Mail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=your_email@gmail.com
SMTP_FROM_NAME="Saraiva Vision"

# API Keys and Secrets
WP_REST_API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here

# Security
WP_SALT_KEYS=generate_new_salt_keys_here

# Development Settings
COMPOSER_ALLOW_SUPERUSER=1
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=50M
PHP_POST_MAX_SIZE=50M

# SSL Configuration (for Nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# CDN Configuration (Optional)
CDN_URL=https://cdn.saraivavision.com.br

# Monitoring
HEALTH_CHECK_TOKEN=your_health_check_token_here

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Performance Settings
WP_CACHE=true
WP_REDIS_HOST=redis
WP_REDIS_PORT=6379
WP_REDIS_TIMEOUT=1
WP_REDIS_READ_TIMEOUT=1
WP_REDIS_DATABASE=0

# ACF Pro License (if using)
ACF_PRO_KEY=your_acf_pro_key_here

# Plugin Licenses (if applicable)
WP_ROCKET_KEY=your_wp_rocket_key_here
SMUSH_KEY=your_smush_key_here