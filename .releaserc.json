{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "test", "release": false },
          { "type": "chore", "release": false },
          { "type": "ci", "release": false },
          { "type": "build", "release": false },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ğŸ› Bug Fixes" },
            { "type": "perf", "section": "âš¡ Performance Improvements" },
            { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
            { "type": "docs", "section": "ğŸ“ Documentation" },
            { "type": "style", "section": "ğŸ’„ Styles" },
            { "type": "test", "section": "âœ… Tests" },
            { "type": "build", "section": "ğŸ“¦ Build System" },
            { "type": "ci", "section": "ğŸ”§ CI/CD" },
            { "type": "chore", "section": "ğŸ”¨ Chores" }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# ğŸ“ Changelog\n\nTodas as mudanÃ§as notÃ¡veis neste projeto serÃ£o documentadas neste arquivo.\n\nO formato Ã© baseado em [Keep a Changelog](https://keepachangelog.com/pt-BR/1.0.0/),\ne este projeto adere ao [Semantic Versioning](https://semver.org/lang/pt-BR/)."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "package-lock.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "ğŸ‰ Esta issue foi incluÃ­da na versÃ£o [${nextRelease.version}](${releases[0].url}) ğŸš€",
        "labels": ["released"],
        "releasedLabels": ["released@${nextRelease.version}"]
      }
    ]
  ]
}
