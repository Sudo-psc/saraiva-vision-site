{
  "version": 2,
  "name": "saraiva-vision-site",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/wp-json/(.*)",
      "dest": "/api/wordpress-proxy?path=$1"
    },
    {
      "src": "/ads",
      "dest": "/ads.html"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/sw.js",
      "dest": "/sw.js",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(self)"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://maps.googleapis.com https://www.gstatic.com https://www.google.com https://www.recaptcha.net https://www.gstatic.com https://maps-api-ssl.google.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://saraivavision.com.br https://www.google-analytics.com https://www.googletagmanager.com https://maps.googleapis.com https://www.recaptcha.net https://maps-api-ssl.google.com; frame-src https://www.google.com https://www.recaptcha.net https://maps.google.com; object-src 'none'; base-uri 'self'; form-action 'self' https://saraivavision.com.br; upgrade-insecure-requests;"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://saraivavision.com.br/api",
    "VITE_WORDPRESS_URL": "https://saraivavision.com.br"
  },
  "regions": ["gru1"],
  "outputDirectory": "dist"
}