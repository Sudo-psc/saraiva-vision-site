{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "name": "Production",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ],
  "functions": {
    "api/**": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://saraivavision.com.br/api",
    "VITE_WORDPRESS_URL": "https://saraivavision.com.br"
  }
}