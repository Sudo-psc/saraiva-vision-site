{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/contact/**": {
      "maxDuration": 10,
      "memory": 256
    },
    "api/**": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/"
    }
  ],
  "regions": [
    "gru1"
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://saraivavision.com.br/api",
    "VITE_WORDPRESS_URL": "https://saraivavision.com.br"
  }
}