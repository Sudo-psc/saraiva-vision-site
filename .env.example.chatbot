# AI Chatbot Configuration
# Copy these variables to your .env file and configure with your actual values

# Google Gemini API Configuration
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_K=40
GEMINI_TOP_P=0.95

# Rate Limiting Configuration
CHATBOT_RATE_LIMIT_RPM=60
CHATBOT_RATE_LIMIT_RPH=1000
CHATBOT_MAX_TOKENS_PER_USER=50000
CHATBOT_RATE_WINDOW=1

# Security Configuration
CHATBOT_INPUT_VALIDATION=true
CHATBOT_MAX_MESSAGE_LENGTH=2000
CHATBOT_CONTENT_FILTERING=true
CHATBOT_SESSION_TIMEOUT=1800000
CHATBOT_ENABLE_ENCRYPTION=true

# Medical Compliance Configuration (CFM)
CHATBOT_CFM_COMPLIANCE=true
CHATBOT_EMERGENCY_DETECTION=true
CHATBOT_MEDICAL_DISCLAIMERS=true
CHATBOT_EMERGENCY_KEYWORDS=emergência,socorro,dor intensa,perda de visão,sangramento,acidente
CHATBOT_MEDICAL_TERMS=diagnóstico,receita,medicamento,tratamento,cirurgia,doença

# LGPD Privacy Configuration
CHATBOT_LGPD_COMPLIANCE=true
CHATBOT_DATA_RETENTION_DAYS=365
CHATBOT_CONSENT_MANAGEMENT=true
CHATBOT_DATA_ENCRYPTION=true
CHATBOT_AUDIT_LOGGING=true

# Database Configuration (Supabase)
# These should already be configured in your main .env file
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key

CHATBOT_DB_POOLING=true
CHATBOT_DB_MAX_CONNECTIONS=10

# Feature Flags
CHATBOT_APPOINTMENT_BOOKING=true
CHATBOT_REFERRAL_MANAGEMENT=true
CHATBOT_WEBSOCKET_SUPPORT=false
CHATBOT_ENABLE_CACHING=true
CHATBOT_ENABLE_ANALYTICS=true

# Logging Configuration
CHATBOT_LOG_LEVEL=info

# Performance Optimization Configuration
CHATBOT_MAX_CONNECTIONS=10
CHATBOT_MIN_CONNECTIONS=2
CHATBOT_ACQUIRE_TIMEOUT=30000
CHATBOT_IDLE_TIMEOUT=300000
CHATBOT_MAX_LIFETIME=1800000
CHATBOT_MAX_CONCURRENT=50
CHATBOT_AUTO_SCALING=true
CHATBOT_MAX_INSTANCES=5
CHATBOT_MIN_INSTANCES=1

# Cache Configuration
CHATBOT_CACHE_DEFAULT_TTL=86400
CHATBOT_CACHE_MEDICAL_TTL=604800
CHATBOT_CACHE_APPOINTMENT_TTL=3600
CHATBOT_CACHE_MAX_ENTRIES=10000

# Performance Monitoring Configuration
CHATBOT_PERFORMANCE_MONITORING=true
CHATBOT_METRICS_RETENTION_DAYS=30

# Development/Testing Configuration
NODE_ENV=development