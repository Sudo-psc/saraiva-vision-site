# Next.js Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================
# NEXT.JS CONFIGURATION
# ============================================
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ============================================
# API CONFIGURATION
# ============================================
# API base URL (for production use https://saraivavision.com.br/api)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api

# ============================================
# GOOGLE SERVICES
# ============================================
# Google Maps API Key (for location services)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
NEXT_PUBLIC_GOOGLE_PLACE_ID=your_google_place_id_here

# Google Gemini AI (for content generation)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
NEXT_PUBLIC_GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Supabase URL and Keys
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Resend API (for contact form)
RESEND_API_KEY=your_resend_api_key_here
CONTACT_TO_EMAIL=your_email@example.com
CONTACT_EMAIL_FROM=contato@saraivavision.com.br

# ============================================
# WORDPRESS INTEGRATION (Optional)
# ============================================
WORDPRESS_API_URL=https://cms.saraivavision.com.br
WORDPRESS_GRAPHQL_ENDPOINT=https://cms.saraivavision.com.br/graphql
WP_REVALIDATE_SECRET=your_revalidate_secret_here
WP_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# ANALYTICS
# ============================================
# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_public_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
POSTHOG_API_KEY=your_posthog_api_key_here
POSTHOG_PROJECT_ID=your_posthog_project_id_here

# ============================================
# SECURITY & RATE LIMITING
# ============================================
# Rate limiting configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# reCAPTCHA (if using)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# ============================================
# LOCALIZATION
# ============================================
NEXT_PUBLIC_DEFAULT_LOCALE=pt-br
TIMEZONE=America/Sao_Paulo

# ============================================
# PERFORMANCE & MONITORING
# ============================================
# GraphQL timeout and retry settings
NEXT_PUBLIC_GRAPHQL_TIMEOUT=15000
NEXT_PUBLIC_GRAPHQL_MAX_RETRIES=3
NEXT_PUBLIC_GRAPHQL_RETRY_DELAY=1000

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_PROFILES=true
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_GOOGLE_REVIEWS=true

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Set to true for verbose logging
NEXT_PUBLIC_DEBUG=false

# Notes:
# - Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# - Server-side only variables should NOT have NEXT_PUBLIC_ prefix
# - Never commit .env.local to git (it's in .gitignore)
# - For production, set these in your hosting platform (Vercel, VPS, etc.)
