  "releaseCommitMessageFormat": "chore(release): {{currentTag}}",
  "skip": {
    "changelog": false
  },
  "bumpFiles": [
    {
      "filename": "package.json",
      "type": "json"
    }
  ],
  "header": "# Changelog\n\nAll notable changes to the Saraiva Vision medical platform will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n\n## ⚠️ Breaking Changes Warning\n\nBreaking changes are marked with **BREAKING CHANGE** and include migration guides when applicable.\n",
  "preset": "conventionalcommits",
  "preMajor": false,
  "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
  "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
  "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
  "userUrlFormat": "{{host}}/{{user}}"
}
